{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "conway build",
			"command": "C:\\MinGW\\bin\\g++.exe",
			"args": [
				"-g",
				"*.cpp",
				"-o",
				"${workspaceFolder}\\bin\\conway.exe",
				"-I","${workspaceFolder}\\SDL\\include",
				"-L","${workspaceFolder}\\SDL\\lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_image"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: C:\\MinGW\\bin\\g++.exe"
		}
	]
}